{{#if posts.length}}
{{#each posts as |post|}}
<!-- Section for displaying individual dashboard content -->
<section class="dashboard-content">
    <!-- Link to the post details page -->
    <a href="/posts/{{post.id}}">
        <!-- Display post title -->
        <div class="db-title">
            <span>{{post.title}}</span>
        </div>
    </a>
    <!-- Display post creation date -->
    <div class="db-date">
        <span>{{format_date post.date_created}}</span>
    </div>
</section>
{{/each}}
{{/if}}

<!-- Section for creating a new post -->
<section class="post">
    <!-- Section header for new post creation -->
    <div class="section-header">
        <h3>Create New Post</h3>
    </div>
    <div class="section-body">
        <!-- Form for submitting new post data to server -->
        <form id="new-post-form">
            <!-- Label and input for post title -->
            <label for="title">Title</label>
            <input type="text" name="title" id="title">
            <!-- Label and textarea for post content -->
            <label for="content">Content</label>
            <textarea name="content" id="content" cols="30" rows="10"></textarea>
            <!-- Button to submit new post -->
            <button class="create-post" type="submit">Create</button>
        </form>
    </div>
</section>

<!-- Include js file for creating a new post -->
<script src="/js/create-post.js"></script>
