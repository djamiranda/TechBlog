<!-- Display section for posted comments -->
<section class="posted-comment">
    <!-- Section header for comments -->
    <div class="section-header">
        <h3>Comments</h3>
    </div>
    <!-- Loop through each comment in the current context -->
    {{#each this}}
    <div class="section-body">
        <!-- Display the comment's text -->
        <p>{{text}}</p>
        <!-- Display the username and date of comment creation -->
        <p>â€“ {{user.username}}, {{format_date post.date_created}}</p>
    </div>
    {{/each}}
</section>

<!-- Display section for adding a new comment -->
<section class="comment">
    <!-- Section header for new comment -->
    <div class="section-header"></div>
    <div class="section-body">
        <!-- Display the title of the post -->
        {{post.title}}
        <!-- Form for submitting a new comment -->
        <form class="comment-form" action="/comment" method="POST">
            <!-- Label for comment input -->
            <label for="comment">Comment</label>
            <!-- Textarea for entering the comment body -->
            <textarea name="comment-body" id="comment" cols="30" rows="10"></textarea>
            <!-- Button to submit the comment -->
            <button class="login" type="submit">Submit</button>
        </form>
    </div>
</section>
