<!-- Section for creating a new post -->
<section class="post">
    <!-- Section header for new post creation -->
    <div class="section-header">
        <h3>Create New Post</h3>
    </div>
    <div class="section-body">
        <!-- Form for submitting new post data to server -->
        <form action="/post" method="POST">
            <!-- Label and input for post title -->
            <label for="title">Title</label>
            <input type="text" name="title" id="title">
            <!-- Label and textarea for post content -->
            <label for="content">Content</label>
            <textarea name="content" id="content" cols="30" rows="10"></textarea>
            <!-- Button to submit new post -->
            <button class="create-post" type="submit">Create</button>
        </form>
    </div>
</section>
